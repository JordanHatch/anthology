<!DOCTYPE html>
<html>
<head>
  <title><%= library_title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

  <main>
    <header>
      <h1><%= link_to library_title, root_path %></h1>

      <% if current_user %>
        <nav class="signed-in">
          <ul class="routes">
            <li><%= link_to "all books", books_path %></li>
            <li><%= link_to "new book", new_book_path %></li>
          </ul>

          <ul class="user">
            <li>
              <%= link_to books_path(on_loan_to: current_user.id) do %>
                <span class="name"><%= current_user.name %></span> <span class="loan_count">(<%= current_user.copies.count %> on loan)</span>
              <% end %>
            </li>
            <li><%= link_to "sign out", sign_out_path %></li>
          </ul>

          <div class="clear"></div>
        </nav>
      <% end %>
    </header>

    <% flash.each do |id, message| %>
    <div class="flash flash_<%= id %> wrap">
      <%= message %>
    </div>
    <% end %>

    <%= yield %>
  </main>

</body>
</html>
