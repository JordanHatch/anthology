<section class="resource sign_in wrap">
  <% if use_developer_strategy? %>
    <h1>Sign in</h1>

    <p>You can sign in by providing a stub user in the development environment.</p>
    <p><%= link_to "Sign in (development)", "/auth/developer", :class => 'btn' %></p>
  <% else %>
    <h1>Sign in</h1>

    <p>Sign in with your <strong><%= organization_name %></strong> GitHub account to access <%= library_title %>.</p>

    <p><%= link_to "Sign in with GitHub", "/auth/github", :class => 'btn' %></p>
  <% end %>
</section>
